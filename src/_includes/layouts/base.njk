<!doctype html>
<html lang="en-CA">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>{{ title }} | {{ site.title }}</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-title" content="{{ site.title }}">
        <meta name="author" content="{{ site.author }}">
        <meta name="description" content="{{ pageExcerpt | striptags if pageExcerpt else site.description }}">
        <meta name="theme-color" content="#fff">
        <meta name="og:type" property="og:type" content="website">
        <meta name="og:site_name" property="og:site_name" content="{{ site.title }}">
        <meta name="og:description" property="og:description" content="{{ pageExcerpt | striptags if pageExcerpt else site.description }}">
        <meta property="og:image" content="{{ env.baseUrl if env.baseUrl }}/images/og-image.png">
        <meta property="og:title" content="{{ pageTitle }} | {{ site.title }}">
        <meta property="og:url" content="{{ env.baseUrl if env.baseUrl }}{{ page.url }}">
        <link rel="icon" href="/icon.svg" type="image/svg+xml">
        <link rel="manifest" href="/manifest.json">

        <link rel="stylesheet" href="/css/main.css"/>
        {% block headerScripts %}{% endblock %}
    </head>
    <body>
        <header role="banner">
            <a class="logo" href="/">
                {% include "../../images/logo.svg" %}
                <span class="logo-text" data-i18n-textcontent="idrc_wordles">IDRC Word Clouds</span>
            </a>
            <nav data-i18n-arialabel="menu" aria-label="menu">
                <ul role="list" class="main-menu">
                    {% block headerContent %}{% endblock %}
                    <li>
                        <ul role="list" class="lang-toggle">
                            <li><a id="toggle-en" href="" lang="en-CA" hreflang="en-CA" aria-current="page">English</a></list> /
                            <li><a id="toggle-fr" href="" lang="fr-CA" hreflang="fr-CA">Fran√ßais</a></list>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
        <main>
            {% block content %}{% endblock %}
        </main>

        {% block footerScripts %}{% endblock %}
    </body>
</html>
